{
	"expo": {
		"name": "rn-weather",
		"slug": "rn-weather",
		"version": "1.0.0",
		"orientation": "portrait",
		"icon": "./assets/app-icon.jpg",
		"userInterfaceStyle": "light",
		"splash": {
			"image": "./assets/app-splash.png",
			"resizeMode": "contain",
			"backgroundColor": "#ffffff"
		},
		"assetBundlePatterns": ["**/*"],
		"ios": {
			"supportsTablet": true,
			"infoPlist": {
				"NSLocationAlwaysAndWhenInUseUsageDescription": "rn-weather needs permission to access location for weather forecast",
				"UIBackgroundModes": ["location", "fetch"]
			}
		},
		"android": {
			"adaptiveIcon": {
				"foregroundImage": "./assets/adaptive-icon.png",
				"backgroundColor": "#ffffff"
			},
			"permissions": ["ACCESS_BACKGROUND_LOCATION"]
		},
		"web": {
			"favicon": "./assets/favicon.png"
		},
		"plugins": [
			[
				"expo-location",
				{
					"locationAlwaysAndWhenInUsePermission": "Allow rn-weather to use your location."
				}
			]
		]
	}
}
